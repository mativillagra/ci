pipeline {
    agent any

    stages {
        stage ('Build') {
            steps {
                
                    sh "cd grupoA && docker build -t grupoA.0.0.${env.BUILD_ID} -f Dockerfile ."                
            }
        }

        stage ('Tag') {
            steps {

                    sh "cd grupoA && docker tag grupoA.0.0.${env.BUILD_ID} localhost:5000/grupoA.0.0.${env.BUILD_ID} && docker push localhost:5000/grupoA.0.0.${env.BUILD_ID}"
            }
        }

        stage ('Deploy') {
            steps {
               
                    sh "bash deploy.sh ${env.BUILD_ID}"               
            }
        }
    }
}
